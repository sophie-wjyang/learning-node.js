
<html lang="en">
<%- include('./partials/head.ejs') %> 

<body>

    <%- include('./partials/nav.ejs') %> 

    <div class="blogs content">
        <h2>All Blogs</h2>

        <!-- we use the ejs tags <% %> when we need to access a dynamic object -->
 
        <!-- if there are previous blogs -->
        <% if(blogs.length > 0){ %> 
            <!-- we output the header and text for each blog -->
            <% blogs.forEach(blog => { %> 
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }) %>
        <% } else{ %>
            <p>There are no blogs to display.</p> 
        <%}%>

    </div>

    <%- include('./partials/footer.ejs') %> 

    
</body>
</html>